#!/usr/bin/env node

var program = require('commander')
var watch = require('./cooking-watch')
var build = require('./cooking-build')

program.version(require('./../package.json').version)
  .command('init [template]', '初始化一个空项目，默认是 vue')
  .command('update <dependency>', '更新 cooking 的 dependency, npm update 用法一致')
  .command('watch', '开发模式')
  .command('build', '构建模式')
  .parse(process.argv)

if (!process.argv.slice(2).length) {
  program.outputHelp()
}
